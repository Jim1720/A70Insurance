@code{

    private ElementReference cap;
    private ElementReference prev;
    private ElementReference next;
    Boolean setupcompleted = false;

    protected async override Task OnAfterRenderAsync(bool firstRender)
    {

        try
        {

            if (firstRender && setupcompleted == false)
            {


                await JS.InvokeAsync<string>("initializeCarousel", cap, prev, next);
                firstRender = false;
                setupcompleted = true; 
            } 

        }
        catch(System.Exception ex)
        {

            Console.WriteLine("Classic OnAfterRwenderAsync: encountered an issue:");
            Console.WriteLine(ex.Message.ToString());

        }
    }



}